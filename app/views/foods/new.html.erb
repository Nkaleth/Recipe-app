<h1>New Food for <%=current_user&.name%></h1>
<%= link_to user_foods_path do %>
  <h2>Go back to users' food</h2>
<% end %>
<% if flash[:error] %>
  <div class="alert alert-danger"><%= flash[:error] %></div>
<% end %>
<%= form_with model:  [current_user, @food], html: { class: 'form-horizontal p-5 w-30' } do |form| %>
  <div class="form-group">
    <%= form.label :name, class: 'form-label' %>
    <div class="mb-3">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :measurement_unit, class: 'form-label' %>
    <div class="mb-3">
      <%= form.text_area :measurement_unit, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :price, class: 'form-label' %>
    <div class="mb-3">
      <%= form.number_field :price, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :quantity, class: 'form-label' %>
    <div class="mb-3">
      <%= form.number_field :quantity, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="d-flex justify-content-center">
      <%= form.submit class: 'btn btn-primary mt-4' %>
    </div>
  </div>
<% end %>