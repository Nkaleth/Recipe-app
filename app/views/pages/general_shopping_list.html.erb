<h1>Shopping List</h1>
<div class="d-flex justify-content-between w-75 m-5">
  <h3 class="w-10">Amount of food items to buy: <%= @count %> </h3>
  <h3 class="w-10" >Total Value of food needed: <%= @total_price %>$ </h3>
</div>

<table class="table table-striped table-bordered  w-50">
  <thead>
    <tr>
      <th scope="col">Food</th>
      <th scope="col">Quantity</th>
      <th scope="col">Price</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
      <% @list.each do |row| %>
    <tr>
      <td><%= row[:name] %></td>
      <td><%= row[:quantity] %> <%= row[:measurement_unit] %></td>
      <td>$<%= row[:price] %></td>
    </tr>
  <% end %> 
  </tbody>
</table>